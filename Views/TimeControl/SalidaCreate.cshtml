@model List<ProyectoControlLineaBus.Models.MuestraControlador>
@{
    ViewBag.Title = "Registrar Salida";
}

<style>
    .btn-outline-primary,
    .btn-outline-danger,
    .btn-outline-warning,
    .btn-outline-secondary,
    .btn-outline-info {
        border-width: 4px;
        font-weight: bold;
        color: white;
    }

    .btn-outline-primary {
        border-color: rgba(0, 123, 255, 0.7);
    }

    .btn-outline-danger {
        border-color: rgba(220, 53, 69, 0.7);
    }

    .btn-outline-info {
        border-color: rgba(23, 162, 184, 0.7);
    }


    .btn-outline-primary:hover {
        background-color: #007bff;
        color: white;
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        color: white;
    }

    .btn-outline-info:hover {
        background-color: #17a2b8;
        color: white;
    }

    , .btn-primary, .btn-danger {
        width: 150px;
        font-weight: bold;
    }

    .btn-secondary {
        background-color: #6c757d;
        font-weight: bold
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        font-weight: bold;
    }

    .btn-info {
        background-color: #006a78;
        border-color: #006a78;
        font-weight: bold;
    }

    .btn-warning {
        background-color: #5c5c00;
        border-color: #5c5c00;
        font-weight: bold;
    }

    .button-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 10px;
        margin-bottom: 20px;
    }

    .placa-container {
        display: flex;
        flex-wrap: wrap;
        max-height: 400px;
        overflow-y: auto;
        margin-bottom: 0px;
        justify-content: center;
    }

    .placa-box {
        width: calc(33.33% - 20px);
        max-width: 140px;
        margin: 10px;
        text-align: center;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 10px;
        cursor: pointer;
        transition: transform 0.2s, background-color 0.2s;
        background-color: #fff;
        flex: 1 0 calc(33.33% - 20px);
    }

        .placa-box:hover {
            transform: scale(1.05);
            border-color: #007bff;
            background-color: #f0f0f0;
        }

    .placa-image {
        width: 60%;
        height: auto;
    }

    .placa-number {
        font-weight: bold;
        color: #000;
        font-size: 12px;
    }

    .placa-date {
        font-size: 12px;
        font-weight: bold;
        color: #333;
        margin-top: 3px;
    }

    .details-list {
        list-style-type: none;
        padding-left: 0;
    }

    .form-group {
        text-align: center;
    }

    .details-section h3,
    .details-section h4,
    .details-section p {
        margin-bottom: 2%;
    }

    .collapsible {
        cursor: pointer;
        display: flex;
        align-items: center;
        font-weight: bold;
        color: white;
    }

    .collapsible-content {
        display: none;
        padding-left: 20px;
        margin-bottom: 2%;
        color: white;
    }


    @@media (max-width: 576px) {
        .placa-box {
            width: calc(50% - 20px);
        }

        .placa-number {
            font-size: 14px;
        }
    }

    @@media (min-width: 576px) and (max-width: 768px) {
        .placa-box {
            width: calc(33.33% - 20px);
        }

        .placa-number {
            font-size: 14px;
        }
    }

    @@media (min-width: 768px) and (max-width: 992px) {
        .placa-box {
            width: calc(25% - 20px);
        }

        .placa-number {
            font-size: 16px;
        }
    }

    @@media (min-width: 992px) {
        .placa-box {
            width: calc(20% - 20px);
        }

        .placa-number {
            font-size: 18px;
        }
    }

    @@media (min-width: 1200px) {
        .placa-box {
            width: calc(16.66% - 20px);
        }

        .placa-number {
            font-size: 20px;
        }
    }

    @@media (min-width: 1200px) {
        .small-dropdown {
            width: 100%;
            font-weight: bold;
        }
    }

    @@media (max-width: 800px) {
        .small-dropdown {
            width: 10%;
            font-weight: bold;
        }
    }

</style>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="~/assets/css/main.css" />
    <noscript><link rel="stylesheet" href="~/assets/css/noscript.css" /></noscript>
    <meta http-equiv="refresh" content="600">
</head>
<div style="margin-top:5%"></div>

<h2 class="text-center">Crear Control</h2>

<div class="button-container">

    <div>
        <div class="row">
            <div class="col-md-3">
                @Html.ActionLink("Volver", "OptionsPrincipalControl", "TimeControl", "", new { @class = "btn btn-outline-primary" })
            </div>
        </div>
    </div>
    <div id="registerButtonContainer" style="display:none;">
        <input type="submit" value="Registrar" class="btn btn-success" form="registerForm" />
    </div>

</div>

@using (Html.BeginForm("SalidaCreate", "TimeControl", FormMethod.Post, new { id = "registerForm" }))
{
    <input type="hidden" id="selectedPlateInput" name="plate" value="" />
    <div class="row">
        <div class="col-xs-3">
            Ruta
        </div>
        <div class="col-xs-5">
            @Html.DropDownList("SelectedCheckpointId", (SelectList)ViewBag.Checkpoints, new { @class = "form-control", @style = "font-weight:bold" })
        </div>
    </div>


    <div id="detailsSection" style="display:none;">
        <h4>Número de Placa: <span id="selectedPlate"></span></h4>

        <div id="retrasosWrapper" style="display:none;">
            <div class="collapsible" onclick="toggleContent('retrasosContent')">
                <span id="retrasosArrow">▶</span><span style="margin-left: 5px;">Tiempos</span>
            </div>
            <div id="retrasosContent" class="collapsible-content">
                <ul id="retrasosList" class="details-list"></ul>
            </div>
        </div>

        <div id="incidenciasWrapper" style="display:none;">
            <div class="collapsible" onclick="toggleContent('incidenciasContent')">
                <span id="incidenciasArrow">▶</span><span style="margin-left: 5px;">Observaciones</span>
            </div>
            <div id="incidenciasContent" class="collapsible-content">
                <ul id="incidenciasList" class="details-list"></ul>
            </div>
        </div>
    </div>

    <div class="placa-container">
        @foreach (var item in Model)
        {
            <div class="placa-box" onclick="showDetails('@item.plate')">
                <img src="~/images/bus.png" class="placa-image" alt="Bus Image" />
                <div class="placa-number">@item.plate</div>
                <div class="placa-date">
                    @(item.registerDate != DateTime.MinValue ? item.registerDate.ToString("dd/MM/yyyy HH:mm") : "No registrado")
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function showDetails(plate) {
            var selected = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Select(m => new {
                m.plate,
                m.retrasos,
                m.incidencias
            })));
            var detalles = selected.find(x => x.plate === plate);

            $('#selectedPlate').text(plate);
            $('#selectedPlateInput').val(plate);
            $('#retrasosList').empty();
            $('#incidenciasList').empty();

            // Mostrar/ocultar retrasos
            if (detalles.retrasos && detalles.retrasos.length > 0) {
                detalles.retrasos.forEach(function (retraso) {
                    $('#retrasosList').append('<li>' + retraso + '</li>');
                });
                $('#retrasosWrapper').show(); // Mostrar sección de tiempos
                $('#retrasosContent').hide(); // Iniciar colapsado
            } else {
                $('#retrasosWrapper').hide(); // Ocultar si no hay registros
            }

            // Mostrar/ocultar incidencias y abrir automáticamente si hay registros
            if (detalles.incidencias && detalles.incidencias.length > 0) {
                detalles.incidencias.forEach(function (incidencia) {
                    $('#incidenciasList').append('<li>' + incidencia + '</li>');
                });
                $('#incidenciasWrapper').show(); // Mostrar sección de observaciones
                $('#incidenciasContent').hide(); // Iniciar colapsado
            } else {
                $('#incidenciasWrapper').hide(); // Ocultar si no hay registros
            }

            $('#detailsSection').show();
            $('#registerButtonContainer').show();
        }

        function toggleContent(id) {
            var content = $('#' + id);
            var arrow = $('#' + id.replace('Content', 'Arrow'));

            if (content.is(':visible')) {
                content.hide();
                arrow.text('▶');
            } else {
                content.show();
                arrow.text('▼');
            }
        }
    </script>
}