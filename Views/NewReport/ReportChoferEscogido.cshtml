@model List<ProyectoControlLineaBus.Models.MostrarReportesChofer>
@{ 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Reportes @ViewBag.name  -  @ViewBag.Month/@ViewBag.Year </title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

    <style>
        .table th, .table td {
            color: black; /* Texto blanco en la tabla */
        }
    </style>
</head>
<body>
    <h2 class="text-center">Reportes @ViewBag.name -  @ViewBag.Month/@ViewBag.Year</h2>

    <table border="1" class="table">
        <thead>
            <tr>
                <th>Descripción</th>
                <th class="text-center">Personas que Reportaron</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Descripcion</td>
                    <td class="text-center">@item.Count</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
