@model ProyectoControlLineaBus.Models.AddCheckpoint

@{

    ViewBag.Title = "Crear Punto de Control";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="~/assets/css/main.css" />
    <noscript><link rel="stylesheet" href="~/assets/css/noscript.css" /></noscript>

</head>
<div style="margin-top:5%"></div>
<h2 class="text-center">Agregar Punto de Control</h2>
<div>
    @Html.ActionLink("Volver", "Index", "Checkpoint", "", new { @class = "btn btn-outline-primary" })
</div>
<style>
    textarea.form-control {
        min-height: calc(1.5em + 0.75rem + 2px);
        max-width: 510px;
    }

    input, select, textarea {
        max-width: 340px;
    }
    .form-check {
        display: block;
        margin-bottom: 1rem;
        border-color:white;

    }

    .form-check-input {
        position: static;
        margin-top: 0.3rem;
        margin-left: 0;
        margin-right: 0.25rem;
        border-color: white;
        background-color: white;
    }

    .form-check-label {
        margin-left: 1.25rem;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-7">
                <div class="form-group">
                    @Html.LabelFor(model => model.description, htmlAttributes: new { @class = "control-label" })
                    <div style="height: auto">
                        @Html.TextAreaFor(model => model.description, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <div class="form-check">
                            <input type="checkbox" id="final" name="final" class="form-check-input" value="true" />
                            <label class="form-check-label" for="final">Marcar si es el último punto de control</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-5">
                @Html.LabelFor(model => model.latitud_longitud, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.latitud_longitud, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.latitud_longitud, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-5"></div>
            <div class="form-group col">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Registrar" class="btn btn-success mt-3" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
