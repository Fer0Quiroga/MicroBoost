@model ProyectoControlLineaBus.Models.LineControl

@{
    ViewBag.Title = "Crear Línea";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="~/assets/css/main.css" />
    <noscript><link rel="stylesheet" href="~/assets/css/noscript.css" /></noscript>
    <title>Crear Línea</title>
    <style>
        .btn-outline-primary,
        .btn-outline-danger,
        .btn-outline-warning,
        .btn-outline-secondary,
        .btn-outline-info {
            border-width: 4px;
            font-weight: bold;
            color: white;
        }

        .btn-outline-primary {
            border-color: rgba(0, 123, 255, 0.7);
        }

        .btn-outline-danger {
            border-color: rgba(220, 53, 69, 0.7);
        }

        .btn-outline-info {
            border-color: rgba(23, 162, 184, 0.7);
        }


        .btn-outline-primary:hover {
            background-color: #007bff;
            color: white;
        }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }

        .btn-outline-info:hover {
            background-color: #17a2b8;
            color: white;
        }

        , .btn-primary, .btn-danger {
            width: 150px;
            font-weight: bold;
        }

        .btn-secondary {
            background-color: #6c757d;
            font-weight: bold
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0069d9;
                border-color: #0062cc;
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            font-weight: bold;
        }

        .btn-info {
            background-color: #006a78;
            border-color: #006a78;
            font-weight: bold;
        }

        .btn-warning {
            background-color: #5c5c00;
            border-color: #5c5c00;
            font-weight: bold;
        }
    </style>
</head>
<div style="margin-top:1%"></div>

<h2 class="text-center">Registrar Línea</h2>

<div>
    @Html.ActionLink("Volver", "Index", "Line", "", new { @class = "btn btn-outline-primary" })
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.extention, htmlAttributes: new { @class = "control-label col-md-2"})
                    <div class="col-md-10"style = "font-weight:bold; color:black" >
                        @Html.DropDownListFor(model => model.extention, new SelectList(new List<SelectListItem>
                        {
                            new SelectListItem { Text = "Micro", Value = "Micro" },
                            new SelectListItem { Text = "Trufi", Value = "Trufi" }
                        }, "Value", "Text"), new { @class = "form-control", @style = "font-weight:bold; color:black; background-color:white" })
                        @Html.ValidationMessageFor(model => model.extention, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    Nombre de la línea
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.nameLine, new { htmlAttributes = new { @class = "form-control", @style = "font-weight:bold; color:black;background-color:white" } })
                        @Html.ValidationMessageFor(model => model.nameLine, "", new { @class = "text-danger" })
                        @TempData["Lineaa"]
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2"></div>
        </div>
        <div class="row">
            <div class="col-md-5"></div>
            <div class="form-group col">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Registrar" class="btn btn-success mt-1" />
                </div>
            </div>
        </div>

    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
