@model ProyectoControlLineaBus.Models.LineControl

@{
    ViewBag.Title = "Actualizar Linea";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="~/assets/css/main.css" />
    <noscript><link rel="stylesheet" href="~/assets/css/noscript.css" /></noscript>
    <title>@ViewBag.Title</title>
    <style>
        .btn-outline-primary,
        .btn-outline-danger,
        .btn-outline-warning,
        .btn-outline-secondary,
        .btn-outline-success,
        .btn-outline-info {
            border-width: 4px;
            font-weight: bold;
            color: white;
        }

        .btn-outline-primary {
            border-color: rgba(0, 123, 255, 0.7);
        }

        .btn-outline-danger {
            border-color: rgba(220, 53, 69, 0.7);
        }

        .btn-outline-info {
            border-color: rgba(23, 162, 184, 0.7);
        }


        .btn-outline-primary:hover {
            background-color: #007bff;
            color: white;
        }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }

        .btn-outline-info:hover {
            background-color: #17a2b8;
            color: white;
        }

        , .btn-primary, .btn-danger {
            width: 150px;
            font-weight: bold;
        }

        .btn-secondary {
            background-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0069d9;
                border-color: #0062cc;
            }

        .btn-danger {
            font-weight: bold;
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-primary {
            font-weight: bold;
            background-color: rgba(0, 123, 255, 0.7);
            border-color: rgba(0, 123, 255, 0.7);
        }
    </style>
</head>

<div style="margin-top:5%"></div>

<h2 class="text-center">Actualizar Información</h2>
<div>
    @Html.ActionLink("Volver", "HomeLine", "", new { @class = "btn btn-outline-primary" })
</div>

<style>
    textarea.form-control {
        min-height: calc(1.5em + 0.75rem + 50px);
        max-width: 510px;
    }

    input, select, textarea {
        max-width: 300px;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="row">

    <div class="form-group col-md-6 text-center">
        <label>Horarios</label>
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-2 text-center">
                <label>Inicio</label>
            </div>
            <div class="col-md-3"></div>
            <div class="col-md-3 text-center">
                <label>Fin</label>
            </div>
        </div>
    </div>
    <div class="col-md-1"></div>
</div>
    
    <div class="row">
        <div class="col-md-3 d-flex align-items-center justify-content-center">
            <div class="col-md-5 p-0">
                @Html.DropDownList("Hora1", (SelectList)ViewBag.Hours, new { @class = "form-control form-control-lg font-weight-bold" })

            </div>
            <div class="col-md-2 text-center p-0 font-weight-bold" style="font-size: 1.5em;">
                :
            </div>
            <div class="col-md-5 p-0">
                @Html.DropDownList("Minuto1", (SelectList)ViewBag.Minutes, new { @class = "form-control form-control-lg font-weight-bold" })
            </div>
        </div>
        <div class="col-md-3 d-flex align-items-center justify-content-center">
            <div class="col-md-5 p-0">
                @Html.DropDownList("Hora2", (SelectList)ViewBag.Hours2, new { @class = "form-control form-control-lg font-weight-bold" })
            </div>
            <div class="col-md-2 text-center p-0 font-weight-bold" style="font-size: 1.5em;">
                :
            </div>
            <div class="col-md-5 p-0">
                @Html.DropDownList("Minuto2", (SelectList)ViewBag.Minutes2, new { @class = "form-control form-control-lg font-weight-bold" })
            </div>
        </div>
    </div>
    </div>



        <div class="row mt-5">
            <div class="col-md-4 "></div>
            <div class="form-group col-md-4" style="margin-left:7%">
                <div class="col-md-offset-2 col-md-10 mt-2">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                </div>
            </div>
        </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
