@model ProyectoControlLineaBus.Models.ReportDates

@{
    ViewBag.Title = "Reporte Fechas";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="~/assets/css/main.css" />
    <noscript><link rel="stylesheet" href="~/assets/css/noscript.css" /></noscript>

</head>
<div style="margin-top:5%"></div>
<h2 class="text-center">Reporte Fechas</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-3"></div>
            <div class="form-group col-md-3">
                Fecha de inicio
                <div class="col-md-10">
                    @Html.EditorFor(model => model.start, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.start, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-3">
                Fecha final
                <div class="col-md-10">
                    @Html.EditorFor(model => model.end, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.end, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4"></div>
            <div class="form-group col" style="margin-left:5%">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Generar" class="btn btn-success mt-2" />
                </div>
                @ViewBag.note
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
